<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.lix.entity.User" table="user" schema="ideatest">
        <id name="id" column="id"/>
        <property name="iname" column="iname"/>
        <property name="ipassword" column="ipassword"/>
        <property name="iage" column="iage"/>
        <property name="isex" column="isex"/>
        <property name="itel" column="itel"/>
        <property name="iaddr" column="iaddr"/>
        <property name="iemail" column="iemail"/>
    </class>
</hibernate-mapping>